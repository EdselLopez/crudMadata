@model List<crudMadata.Models.ContactoModel>

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-dark text-white">
        <h4 style="color:white;"class="mb-0"><i class="fas fa-users text-info"></i> Listado de Clientes</h4>
    </div>

    <div class="card-body bg-light">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Correo Electrónico</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.NombreCompleto</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.CorreoElectronico</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-warning me-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No hay clientes registrados aún.
            </div>
        }
    </div>
</div>
